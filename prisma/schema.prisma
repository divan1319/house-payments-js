generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt      @id @default(autoincrement())
  name      String
  email     String   @unique
  cel       Int      @unique
  password  String
  rolId     BigInt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rol Roles @relation(fields: [rolId], references: [id])

  houses   Houses[]
  payments Payments[]
}

model Roles {
  id        BigInt      @id @default(autoincrement())
  rol       String
  createdAt DateTime @default(now())
  user     User[]
}

model Sendas {
  id        BigInt      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  houses Houses[]
}

model Poligonos {
  id        BigInt      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  houses Houses[]
}

model Houses {
  id         BigInt      @id @default(autoincrement())
  number     Int
  userId     BigInt
  sendaId    BigInt?
  poligonoId BigInt?
  quota      Decimal  @db.Decimal(8, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User       @relation(fields: [userId], references: [id])
  senda    Sendas?    @relation(fields: [sendaId], references: [id])
  poligono Poligonos? @relation(fields: [poligonoId], references: [id])

  payments Payments[]
}

model Payments {
  id        BigInt      @id @default(autoincrement())
  userId    BigInt
  houseId   BigInt
  total     Decimal  @db.Decimal(8, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id])
  house Houses @relation(fields: [houseId], references: [id])
}
